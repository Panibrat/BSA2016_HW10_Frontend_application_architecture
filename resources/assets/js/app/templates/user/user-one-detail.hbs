<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>{{ id }}</td>
        <td>{{ name }}</td>
        <td>{{ lastname }}</td>
        <td>{{ email }}</td>
        <td>
            <a href="#users/edit/{{ id }}" class="btn btn-info" role="button">Edit</a>
            <a href="#users/{{ id }}/books" class="btn btn-success" role="button">User's Books</a>
            <a href="#users/delete/{{ id }}" class="btn btn-danger" role="button">Delete</a>
        </td>
    </tr>
    </tbody>
</table>